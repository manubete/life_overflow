
<div id="show_question">
<h1><%= @question.question_title %></h1>
<p><%= @question.question_content %></p>
</div>
<div class="question-comments">
  <div id="show_comments">
    <% @question.comments.each do |comment| %>
      <div class="comment"><%= comment.comment_content %></div>
    <% end %>
  </div>
  <%= link_to "Create a Comment", "#", :class => 'new_comment_on_question' %>

  <%= form_for @comment, :remote => true, :html => {:class => 'hidden'} do |f| %>
    <%= f.label :comment_content %>
    <%= f.text_field :comment_content %>
    <br>
    <%= f.hidden_field :commentable_id, value: @question.id%>
    <%= f.hidden_field :commentable_type, value: "Question" %>
    <%= f.submit "Add Comment" %>
  <% end %>
  <br>
</div>

<% if current_user %>
  <%= button_to "Create an Answer", new_question_answer_path(@question), :method => :get, :class => "btn btn-warning" %>
<% end  %><br>
<div id="all_answers">
  <h4>Answers</h4>
  <% @question.answers.each do |answer| %>
    <div class="show_answer">
      <div>
        <%= answer.answer_content %>
      </div>
      <%= link_to "Comment on Answer", '#', :class => 'new_comment_on_answer' %>
        <!-- Edit the ajax for these answers -->
      <div class="answer_comments">
         <% answer.comments.each do |comment| %>
          <div class="answer_comment">
            <%= comment.comment_content %>
          </div>
         <% end %>
      </div>
    </div>
  <% end %>
</div>



