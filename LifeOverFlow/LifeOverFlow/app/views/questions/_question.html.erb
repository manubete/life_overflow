<div class="question">
  <span class = "question_title"><h3><%= "#{question.question_title}" %></h3></span>
<!--   <span class= "question_content"><%= "#{question.question_content}" %></span> -->

  <div class="question_buttons">
      <span><%= link_to 'Show' , question_path(question) %></span>
      <span><%= link_to 'Delete' , question_path(question), :method => :delete %></span>
      <span class "question_timestamp"><%= "#{question.updated_at}" %></span>
      <span class "question_author">Created by: <%= "#{question.user.username}" %></span>
  </div>
</div>