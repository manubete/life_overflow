<div class="all_questions">
  <h2>All questions:</h2>
  <% @questions.each do |question| %>
    <span class="question_title"><h2><%= "#{question.question_title}" %></h2></span>
    <span class="question_content"><%= "#{question.question_content}" %></span>
    <div class="question_buttons">
      <%= link_to 'Show', question_path(question) %>
      <%= link_to 'Delete', question_path(question), :method => :delete %>
      </div>
  <% end %>
</div>

<% if current_user %>
  <%= button_to 'Create a Question', new_question_path, :method => :get, :class => "btn btn-success" %><br><br>
<% end  %>