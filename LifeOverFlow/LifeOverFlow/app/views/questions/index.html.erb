<div id="show_questions">
  <h2>All questions:</h2>
  <% @questions.each do |question| %>
    <div class="question">
      <div class = "question_title">
        <h2><%= "#{question.question_title}" %></h2>
      </div>
      <div class= "question_content">
        <%= "#{question.question_content}" %>
      </div>
      <div class="question_buttons">
         <div class = "question_button">
          <%= link_to 'Show' , question_path(question) %>
        </div>
        <div class="question_button">
          <%= link_to 'Delete' , question_path(question), :method => :delete %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<% if current_user %>
<%=link_to "Create a Question", "#", :class => 'new_question' %>
<% end  %>

<%= form_for @question, :remote => true, :html => {:class => 'hidden'} do |f| %>
  <%= f.text_field :question_title, size: "98", placeholder: "Title" %>
    <%= f.text_area :question_content, size: "100x12", placeholder: "Content" %>
  <%= f.submit %>
<% end %>